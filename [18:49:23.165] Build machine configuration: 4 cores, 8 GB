// pages/index.tsx
import React from 'react';

interface HomeProps {
  message?: string;
}

const Home: React.FC<HomeProps> = ({ message = 'Hello, World!' }) => {
  return (
    <div>
      <h1>{message}</h1>
      <p>This is the home page.</p>
    </div>
  );
};

export default Home;
```

