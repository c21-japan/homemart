{
  "name": "homemart",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run lint && npm run typecheck",
    "check-deps": "npm ls @clerk/nextjs @clerk/shared || true",
    "build:ci": "npm run lint && npm run typecheck && npm run check-deps && next build",
    "health": "node -e \"fetch('http://localhost:3000/api/health').then(r=>r.json()).then(j=>console.log(j)).catch(e=>{console.error(e);process.exit(1)})\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "setup:db": "node scripts/setup-supabase.js",
    "setup:env": "cp .env.example .env.local",
    "setup:all": "npm run setup:env && npm run setup:db",
    "seed:customers": "npx tsx scripts/seed-customers.ts",
    "cron:daily": "curl -X POST http://localhost:3000/api/cron/daily",
    "cron:manager": "curl -X POST http://localhost:3000/api/cron/manager",
    "prepare": "husky install"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.1",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@react-email/components": "^0.5.0",
    "@react-email/render": "^1.2.0",
    "@react-pdf/renderer": "^4.3.0",
    "@sentry/nextjs": "^10.5.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-query-devtools": "^5.85.0",
    "@types/google-apps-script": "^1.0.99",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookies-next": "^6.1.0",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.1",
    "googleapis": "^155.0.1",
    "idb-keyval": "^6.2.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "next": "^15.5.10",
    "next-cloudinary": "^6.16.0",
    "node-mailjet": "^6.0.9",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^15.5.10",
    "husky": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
